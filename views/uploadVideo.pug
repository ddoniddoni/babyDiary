extends layouts/main

block content
    .form-container
        form(action=`/videos${routes.uploadVideo}`, method="post", enctype="multipart/form-data")
            div.fileUpload
                label(for="file") 동영상 등록
                input(type="file", id="videoFile", name="videoFile" accept="video/*")
            input(type="text", placeholder="Title", name="title" required=true)
            textarea(name="description", placeholder="Description" required=true)
            input(type="submit", value="Upload File")